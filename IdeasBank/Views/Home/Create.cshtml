@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/menu.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Content/create_style.css")" rel="stylesheet" type="text/css" media="all" />
    @Styles.Render("~/Content/css")
    <title>Створити ідею</title>
</head>
<body>
    <div class="main-menu">
        <div class="left">
            <div class="menu-item logo"><a href=""></a></div>
            <div class="menu-item"><a href="">Майстерня</a></div>
            <div class="menu-item"><a href="">Музей</a></div>
            <div class="menu-item"><a href="">Кладовище</a></div>
        </div>
        <div class="right">
            <div class="menu-item"><a href="" class="search"></a></div>
            <div class="menu-item"><a href="" class="profile"></a></div>
        </div>
    </div>
    <form name="create" id="create" class="create_panel" method="post" action="/Ideas/Create">
    <input type="text" placeholder="Назва" class="name_input" name="Name" id="Name"><br>
    <textarea placeholder="Опис ідеї" class="text_input" rows="3" name="Description" id="Description"></textarea><br>
       <div class="add_image">
            <div class="add_label">
                <img></img>
                <span>Додати зображення</span>
            </div>
        </div>
        <div class="advices">
            <ul>
                <li>Назва має складатись приблизно з 3-6 слів</li>
                <li>В описі лаконічно і зрозуміло викладіть деталі своєї ідеї</li>
                <li>Додавши зображення, ви зробите ідею привабливішою</li>
            </ul>
        </div>
        <div class="create">
            <button type="submit" class="create_but" form="create">Створити</button>
        </div>
</body>
</html>
